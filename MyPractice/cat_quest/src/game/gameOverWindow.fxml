<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import java.net.URL?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="game.GameOverWindowController"
            prefHeight="200.0" prefWidth="400.0">

    <stylesheets>
        <URL value="@css/style.css"/>
    </stylesheets>

    <center>
        <VBox alignment="CENTER">
            <Label text="ПОЗДРАВЛЯЮ!!!"/>
            <Label text="Твой кошак успешно прошёл все испытания, победил боссов и заслуженно получил свой приз!" wrapText="true"/>
            <Label text="Спасибо за игру!"/>
            <Label text="Классная игра получилась, не правда ли?"/>
        </VBox>
    </center>

    <left>
        <FlowPane prefWidth="50"/>
    </left>

    <right>
        <FlowPane prefWidth="50"/>
    </right>

    <bottom>
        <HBox>
            <Button fx:id="button" text="Да!" onAction="#buttonPressed"/>
            <Button text="Конечно!" onAction="#buttonPressed"/>
            <Button text="Согласен!"onAction="#buttonPressed"/>
        </HBox>
    </bottom>

</BorderPane>
