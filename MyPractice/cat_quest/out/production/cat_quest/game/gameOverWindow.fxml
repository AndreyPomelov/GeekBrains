<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="game.GameOverWindowController"
            prefHeight="400.0" prefWidth="500.0">

    <stylesheets>
        <URL value="@css/style.css"/>
    </stylesheets>

    <center>
        <VBox alignment="CENTER">
            <Label text="ПОЗДРАВЛЯЮ!!!" wrapText="true"/>
            <Label/>
            <Label text="Твой кошак успешно прошёл все испытания," wrapText="true"/>
            <Label text="победил боссов и заслуженно получил свой приз!" wrapText="true"/>
            <Label/>
            <Label text="Спасибо за игру!" wrapText="true"/>
            <Label/>
            <Label text="P.S. При создании данной игры " wrapText="true"/>
            <Label text="ни один кошак не пострадал!" wrapText="true"/>
            <Label/>
            <Label text="Классная игра получилась," wrapText="true"/>
            <Label text="не правда ли?" wrapText="true"/>
        </VBox>
    </center>

    <left>
        <FlowPane prefWidth="50"/>
    </left>

    <right>
        <FlowPane prefWidth="50"/>
    </right>

    <bottom>
        <FlowPane alignment="CENTER" hgap="5" vgap="5" prefHeight="50">
            <Button fx:id="button" text="Да!" onAction="#buttonPressed"/>
            <Button text="Конечно!" onAction="#buttonPressed"/>
            <Button text="Согласен!" onAction="#buttonPressed"/>
        </FlowPane>
    </bottom>

</BorderPane>
