<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import java.net.URL?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="game.GameOverWindowController"
            prefHeight="300.0" prefWidth="500.0">

    <stylesheets>
        <URL value="@css/style.css"/>
    </stylesheets>

    <center>
        <VBox alignment="CENTER">
            <Label text="ПОРАЖЕНИЕ!!!" wrapText="true"/>
            <Label/>
            <Label text="Твой кошак не смог противостоять" wrapText="true"/>
            <Label text="всем препятствиям и проиграл..." wrapText="true"/>
            <Label/>
            <Label text="Попробуй ещё раз!" wrapText="true"/>
        </VBox>
    </center>

    <left>
        <FlowPane prefWidth="50"/>
    </left>

    <right>
        <FlowPane prefWidth="50"/>
    </right>

    <bottom>
        <FlowPane fx:id="buttonPanel" alignment="CENTER" hgap="5" vgap="5" prefHeight="50">
            <Button fx:id="button" text="Хорошо" onAction="#buttonPressed"/>
        </FlowPane>
    </bottom>

</BorderPane>
